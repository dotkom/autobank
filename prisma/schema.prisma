datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id                    String         @id @default(cuid())
  name                  String?
  email                 String?        @unique
  emailVerified         DateTime?      @map("email_verified")
  image                 String?
  accounts              Account[]
  sessions              Session[]
  recipts               Recipt[]       @relation(name: "recipt")
  Onlinepotten          Onlinepotten[] @relation(name: "potten")
  Invoiceinfo           Invoiceinfo[]  @relation(name: "invoice")
  approved_recipts      Recipt[]       @relation(name: "approved_recipt")
  approved_Onlinepotten Onlinepotten[] @relation(name: "approved_potten")
  approved_Invoiceinfo  Invoiceinfo[]  @relation(name: "approved_invoice")

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model Recipt {
  id        String  @id @default(cuid())
  user      User?   @relation(fields: [userId], references: [id], name: "recipt")
  userId    String?
  full_name String
  email     String

  created_at   DateTime @default(now())
  approved_at  DateTime
  approvedBy   User?    @relation(fields: [approvedById], references: [id], name: "approved_recipt")
  approvedById String?
  last_updated DateTime @default(now())
  status       String   @default("ikke sendt")

  reimbursement Boolean
  account_nr    Int?
  card          String?
  paid_at       DateTime?
  amount        Int
  occasion      String

  comments     String?
  appendix     Bytes
  error        String?
  error_fields String[]
}

model Onlinepotten {
  id        String  @id @default(cuid())
  user      User?   @relation(fields: [userId], references: [id], name: "potten")
  userId    String?
  full_name String
  email     String

  created_at   DateTime @default(now())
  approved_at  DateTime
  approvedBy   User?    @relation(fields: [approvedById], references: [id], name: "approved_potten")
  approvedById String?
  last_updated DateTime @default(now())
  status       String   @default("ikke sendt")

  occation       String
  planned_date   DateTime
  hours          Int
  description    String
  participants   String[]
  payment_method String
  recipt_id      Int

  comments     String
  error        String
  error_fields String[]
}

model Invoiceinfo {
  id           String  @id @default(cuid())
  user         User?   @relation(fields: [userId], references: [id], name: "invoice")
  userId       String?
  orgnr        String
  company_name String

  contact_name  String
  contact_email String
  contact_nr    Int

  occasion String

  invoice_method String?
  po_nr          String?
  duedays        Int     @default(30)

  comments     String?
  error        String?
  error_fields String[]

  created_at   DateTime @default(now())
  approved_at  DateTime
  approvedBy   User?    @relation(fields: [approvedById], references: [id], name: "approved_invoice")
  approvedById String?
  last_updated DateTime @default(now())
  status       String   @default("ikke sendt")
}
